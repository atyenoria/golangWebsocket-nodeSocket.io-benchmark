#!/usr/bin/env bash

A=50 #total connections
C=20 #concurrency
HOST=$1
OUTPUT=${HOST}_output.csv

pushd websocket-bench > /dev/null
echo "Concurrency,Number,Connections,Errors, Message Send,Message Fail,Duration(ms)" > $OUTPUT
for (( i = 1; i < 5; i++ )); do # C
for (( n = 1; n < 10; n++ )); do # A


AA=`expr $A \* $n`
CC=`expr $C \* $i`

echo -n "${CC}," >> $OUTPUT
node  bin/websocket-bench -a ${AA} -c ${CC} ws://localhost:$HOST
cat result.txt >> $OUTPUT


done
done
cp $OUTPUT ../$OUTPUT
popd  > /dev/null